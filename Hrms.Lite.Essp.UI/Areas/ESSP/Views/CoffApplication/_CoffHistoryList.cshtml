@model Hrms.Lite.Essp.Shared.Essp.Leave.CoffApplication

    <script>
    $(document).ready(function () {
            debugger;

        $('#coffApplicationHistoryTable').DataTable({
                "pageLength": 25,
                "language":
                {
                    searchPlaceholder: "Search",
                }

            });

            $(".dataTables_filter").addClass("dataTables_filter_search");
            $('.ihits-table table').removeClass("dataTable no-footer");
            $(".ihits-table table tr th").removeAttr('style')

        });</script>
    <div class="ihits-table table-border odd-even mobile-responsive-table Applicant-History">
        <table id="coffApplicationHistoryTable">
            <thead>
                <tr class="table-dark">
                    <th scope="col">Leave On</th>
                    <th scope="col">Entitle Date</th>
                    <th scope="col">No.of Days</th>
                    <th scope="col">Type</th>
                    <th scope="col">Reason</th>
                    <th scope="col">Date of Application</th>
                    <th scope="col">Status</th>
                    <th scope="col">Tracker</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.LeaveApplicationList != null && Model.LeaveApplicationList.Count > 0)
                {

                    for (int i = 0; i < Model.LeaveApplicationList.Count; i++)
                    {
                        <tr>
                            <td data-label="Leave On">@Html.Encode(String.Format("{0:dd-MMM-yyyy}", Model.LeaveApplicationList[i].LeaveOn))</td>
                            <td data-label="Entitle Date">@Html.Encode(String.Format("{0:dd-MMM-yyyy}", Model.LeaveApplicationList[i].EntitleDate))</td>
                            <td data-label="No.of Days">@Model.LeaveApplicationList[i].TotalDays</td>
                            <td data-label="Type">@Model.LeaveApplicationList[i].LeaveType.Name</td>
                            <td data-label="Reason">@Model.LeaveApplicationList[i].LeaveReason.Name</td>
                            <td data-label="Date of Application">@Html.Encode(String.Format("{0:dd-MMM-yyyy}", Model.LeaveApplicationList[i].DateOfApplication))</td>
                            <td data-label="Status">@Model.LeaveApplicationList[i].Status</td>
                            <td data-label="Tracker">
                                <a href="#" onclick="onTrackerClick('@Model.LeaveApplicationList[i].LeaveApplicationGI')">
                                    <i class="icon-xl la la-arrow-circle-right"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8">No data Found</td>
                    </tr>
                }




            </tbody>
        </table>
    </div>