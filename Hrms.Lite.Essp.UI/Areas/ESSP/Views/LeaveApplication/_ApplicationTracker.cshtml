            <!----- stepper start here --->
        <div>

            @if (Model.Tracker != null && Model.Tracker.Count > 0)
            {
                if (Model.Tracker.Count > 4)
                {
                    if (@Model.Tracker[4].ApprovalStatus == "Pending")

                    {

                        <!-- completed -->
                        <div class="step">
                            <div class="v-stepper">
                                <div class="circle"><i class="fa fa-check"></i></div>
                                <div class="line"></div>
                            </div>

                            <div class="stepper-content">
                                <div class="row-outer">
                                    <label class="view-title">@Model.Tracker[4].Stage</label>
                                    <div class="view-details">
                                        @Model.Tracker[4].ApprovalStatus,@Model.Tracker[4].Approver
                                    </div>
                                </div>



                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="step active completed">
                            <div class="v-stepper">
                                <div class="circle"><i class="fa fa-check"></i></div>
                                <div class="line"></div>
                            </div>

                            <div class="stepper-content">
                                <div class="row-outer">
                                    <label class="view-title">@Model.Tracker[4].Stage</label>
                                    <div class="view-details">
                                        @Model.Tracker[4].ApprovalStatus,@Model.Tracker[4].Approver,@Html.Encode(String.Format("{0:dd-MMM-yyyy hh:mm}", @Model.Tracker[4].Date))
                                    </div>
                                </div>



                            </div>
                        </div>
                    }
                }

                if (Model.Tracker.Count > 3)
                {
                    if (@Model.Tracker[3].ApprovalStatus == "Pending")

                    {

                        <!-- completed -->
                        <div class="step">
                            <div class="v-stepper">
                                <div class="circle"><i class="fa fa-check"></i></div>
                                <div class="line"></div>
                            </div>

                            <div class="stepper-content">
                                <div class="row-outer">
                                    <label class="view-title">@Model.Tracker[3].Stage</label>
                                    <div class="view-details">
                                        @Model.Tracker[3].ApprovalStatus,@Model.Tracker[3].Approver
                                    </div>
                                </div>



                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="step active completed">
                            <div class="v-stepper">
                                <div class="circle"><i class="fa fa-check"></i></div>
                                <div class="line"></div>
                            </div>

                            <div class="stepper-content">
                                <div class="row-outer">
                                    <label class="view-title">@Model.Tracker[3].Stage</label>
                                    <div class="view-details">
                                        @Model.Tracker[3].ApprovalStatus,@Model.Tracker[3].Approver,@Html.Encode(String.Format("{0:dd-MMM-yyyy hh:mm}", @Model.Tracker[3].Date))
                                    </div>
                                </div>



                            </div>
                        </div>
                    }
                }
                if (Model.Tracker.Count > 2)
                {

                    if (@Model.Tracker[2].ApprovalStatus == "Pending")
                    {
                        <!-- active -->
                        <div class="step ">
                            <div class="v-stepper">
                                <div class="circle"><i class="fa fa-check"></i></div>
                                <div class="line"></div>
                            </div>

                            <div class="stepper-content">
                                <div class="row-outer">
                                    <label class="view-title">@Model.Tracker[2].Stage</label>
                                    <div class="view-details">
                                        @Model.Tracker[2].ApprovalStatus,@Model.Tracker[2].Approver
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="step active completed">
                            <div class="v-stepper">
                                <div class="circle"><i class="fa fa-check"></i></div>
                                <div class="line"></div>
                            </div>

                            <div class="stepper-content">
                                <div class="row-outer">
                                    <label class="view-title">@Model.Tracker[2].Stage</label>
                                    <div class="view-details">
                                        @Model.Tracker[2].ApprovalStatus,@Model.Tracker[2].Approver,@Html.Encode(String.Format("{0:dd-MMM-yyyy hh:mm}", @Model.Tracker[2].Date))
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                if (Model.Tracker.Count > 1)
                {

                    if (@Model.Tracker[1].ApprovalStatus == "Pending")
                    {
                        <!-- empty -->
                        <div class="step">
                            <div class="v-stepper">
                                <div class="circle"><i class="fa fa-check"></i></div>
                                <div class="line"></div>
                            </div>

                            <div class="stepper-content ">
                                <div class="row-outer">
                                    <label class="view-title">@Model.Tracker[1].Stage</label>
                                    <div class="view-details">
                                        @Model.Tracker[1].ApprovalStatus,@Model.Tracker[1].Approver

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="step active completed">
                            <div class="v-stepper">
                                <div class="circle"><i class="fa fa-check"></i></div>
                                <div class="line"></div>
                            </div>

                            <div class="stepper-content ">
                                <div class="row-outer">
                                    <label class="view-title">@Model.Tracker[1].Stage</label>
                                    <div class="view-details">
                                        @Model.Tracker[1].ApprovalStatus,@Model.Tracker[1].Approver,@Html.Encode(String.Format("{0:dd-MMM-yyyy hh:mm}", @Model.Tracker[1].Date))

                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                }
                <!-- regular -->
                <div class="step active completed">
                    <div class="v-stepper">
                        <div class="circle"><i class="fa fa-check"></i></div>
                        <div class="line"></div>
                    </div>

                    <div class="stepper-content ">
                        <div class="row-outer">

                            <label class="view-title">@Model.Tracker[0].Stage</label>
                            <div class="view-details">
                                @Model.Tracker[0].ApprovalStatus,@Html.Encode(String.Format("{0:dd-MMM-yyyy hh:mm}", @Model.Tracker[0].Date))
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>

            <!----- stepper end here --->
            <!--table start here-->
            <div class="ihits-table table-border mobile-responsive-table mb-5">
                <table>
                    <thead>
                        <tr class="table-light">
                            <th style="width: 25%;" scope="col">Type</th>

                            <th scope="col">No of days</th>
                            <th scope="col">From</th>
                            <th scope="col">To</th>


                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td data-label="ID">@Model.LeaveType.Name</td>

                            <td data-label="No of days">
                                @Model.TotalDays
                            </td>

                            <td data-label="From">
                                @Html.Encode(String.Format("{0:dd-MMM-yyyy}", Model.From))
                            </td>

                            <td data-label="To">
                                @Html.Encode(String.Format("{0:dd-MMM-yyyy}", Model.To))
                            </td>
                        </tr>


                    </tbody>
                </table>
            </div>

            <!--table start end-->




            <div class="row">
                <div class="col-md-6">
                    <div class="row-outer">
                        <label class="view-title">Reason</label>
                        <div class="view-details">
                            @Model.LeaveReason.Name
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row-outer">
                        <label class="view-title">Additional Remarks</label>
                        <div class="view-details">
                            @Model.AdditionalRemarks
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="row-outer">
                        <label class="view-title">Work Handover:</label>
                        <div class="view-details">
                            @Model.HandOverDetails
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row-outer">
                        <label class="view-title">Contact Details & Address</label>
                        <div class="view-details">
                            @Model.ContactDetails

                        </div>
                    </div>
                </div>
            </div>






            <div class="row card-footer-bottom-fixed">

                <div class="view-details align-right col-md-12">
                    <a data-toggle="tooltip" data-original-title="View File" type="button" onclick="viewFileFromDT('@Model.Attachment.AbsoluteUri')" class="btn btn-small btn-secondary mobile-full-width">
                        @Html.HiddenFor(model => Model.Attachment.AbsoluteUri)
                        <i class="icon-xl far fa-eye"></i>View File
                    </a>
                </div>



            </div>





        </div>
    </div>