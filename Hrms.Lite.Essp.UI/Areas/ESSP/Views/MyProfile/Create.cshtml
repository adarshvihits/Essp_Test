<div class="profile-header">
    <div class="row">

        <div class="col-md-12 pl-10">
            <div class="row">
                <div class="image-input image-input-outline image-input-circle  float-right mr-5" id="kt_image_4"
                     style="background-image: url(@Model.EmployeeHeader.EmployeeAbsoluteUri)">
                    <div class="image-input-wrapper">
                    </div>
                </div>
                <div class="flex-grow-1">
                    <!--begin::Title-->
                    <div class="d-flex justify-content-between flex-wrap mt-2">
                        <div class="d-flex mr-3 header-profile-name">
                            @*<a class="header-profile-name">Krishnakumar VG</a>
                                <span> ( IHS001 )</span>*@
                            <a href="#" class="">@Model.EmployeeHeader.EmployeeName</a>
                        </div>

                    </div>

                    <!--end::Title-->
                    <!--begin::Content-->
                    <div class="d-flex flex-wrap justify-content-between">
                        <div class="d-flex flex-column flex-grow-1 pr-8">
                            <div class="d-flex flex-wrap mb-1">
                                <a data-toggle="tooltip" data-original-title="designation" class="header-profile-email mr-lg-8 mr-5 mb-lg-0 mb-2">
                                    <i class="fas fa-briefcase icon-nm mr-2"></i>@Model.EmployeeHeader.Designation.Name
                                </a>
                                <a data-toggle="tooltip" data-original-title="department" class="header-profile-email mr-lg-8 mr-5 mb-lg-0 mb-2">
                                    <i class="fas fa-calendar-alt icon-nm mr-2"></i>@Model.EmployeeHeader.Department.Name
                                </a>
                                <a data-toggle="tooltip" data-original-title="location" class="header-profile-email mr-lg-8 mr-5 mb-lg-0 mb-2">
                                    <i class="fas fa-map-marker-alt icon-nm mr-2"></i>@Model.EmployeeHeader.Location.Name
                                </a>
                                <a data-toggle="tooltip" data-original-title="category" class="header-profile-email mr-lg-8 mr-5 mb-lg-0 mb-2">
                                    <i class="fas fa-network-wired icon-nm mr-2"></i>@Model.EmployeeHeader.Category.Name
                                </a>
                                <a data-toggle="tooltip" data-original-title="reporting manager" class="header-profile-email mr-lg-8 mr-5 mb-lg-0 mb-2">
                                    <i class="fas fa-user-tie icon-nm mr-2"></i>
                                    @Model.ReportingManager
                                </a>


                            </div>



                        </div>



                    </div>

                    <!--end::Content-->
                </div>

            </div>







        </div>
    </div>



    <div class="profile-header-overflow"></div>
</div>

<div class="content d-flex flex-column flex-column-fluid mt-25" id="kt_content">
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container full-width">
            <!--begin::Dashboard-->
            <!--begin::Row-->



            <div class="card card-custom height-100per">

                <div class="card-body">
                    <!--begin: Search Form-->
                    <!-- Table Section -->

                    <div class="tab-outer accordion-only">
                        <ul class="ulList">
                            <div class="TabMoving"></div>
                            <li class="tabOne clickOnTab active">Address</li>
                            <div id="tabOne" class="tab-content active">
                                @await Html.PartialAsync("_Address", Model)
                            </div>

                            <!-- Contact Details Info Tab -->
                            <div class="TabMoving"></div>
                            <li class="tabContactDetails clickOnTab">Contact Details</li>
                            <div id="tabContactDetails" class="tab-content">

                                @await Html.PartialAsync("_ContactDetails", Model)
                            </div>
                            <!-- Contact Details Info Tab -->
                            <!-- Personal Info Tab -->
                            <div class="TabMoving"></div>
                            <li class="tabTwo clickOnTab">Personal Info</li>
                            <div id="tabTwo" class="tab-content">
                                @await Html.PartialAsync("_PersonalInfo", Model)
                            </div>
                            <!-- Personal Info Tab -->
                            <!-- Family Details Tab -->
                            <div class="TabMoving"></div>
                            <li class="tabThree clickOnTab">Family Details</li>
                            <div id="tabThree" class="tab-content t3">
                                @await Html.PartialAsync("_FamilyDetails", Model)
                            </div>
                            <!-- Family Details Tab -->
                            <!-- Education Details Tab -->
                            <div class="TabMoving"></div>
                            <li class="tabFive clickOnTab">Education</li>
                            <div id="tabFive" class="tab-content">
                                @await Html.PartialAsync("_Education", Model)
                            </div>
                            <!-- Education Details Tab -->
                            <!-- Skills Tab -->
                            <div class="TabMoving"></div>
                            <li class="tabSix clickOnTab">Skills</li>
                            <div id="tabSix" class="tab-content">
                                @await Html.PartialAsync("_Skills", Model)
                            </div>
                            <!-- Skills Tab -->
                            <!-- Certifications Tab -->
                            <div class="TabMoving"></div>
                            <li class="tabSeven clickOnTab">Certifications</li>
                            <div id="tabSeven" class="tab-content">
                                @await Html.PartialAsync("_Certifications", Model)
                            </div>
                            <!-- Certifications Tab -->
                            <!-- Previous Employment Tab -->
                            <div class="TabMoving"></div>
                            <li class="tabEight clickOnTab">Previous Employment</li>
                            <div id="tabEight" class="tab-content">
                                <div class="t4">
                                    @await Html.PartialAsync("_PreviousEmployment", Model)
                                </div>
                            </div>

                            <!-- Previous Employment Tab -->
                        </ul>
                    </div>

                    <!-- Table Setion End -->

                </div>
            </div>


            <!--end::Row-->
            <!--begin::Row-->
            <!--end::Row-->
            <!--end::Dashboard-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
