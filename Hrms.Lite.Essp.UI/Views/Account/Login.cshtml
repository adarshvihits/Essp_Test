<!--begin::Body-->

<body id="kt_body" class="">
    <!--begin::Main-->
    <div class="login-main-outer">
        <div class="login-bg">

        </div>
        <div class="login login-3 login-signin-on login-outer" id="kt_login">

            <div class="login-form text-center  pl-7 pr-7 pt-5 pb-5 position-relative overflow-hidden">
                <!--begin::Login Header-->
                <div class="d-flex flex-center ">
                    <a href="#">
                        <img src="assets/media/logos/ihits-table-logo.png" class="max-h-100px" alt="" />
                    </a>
                </div>
                <!--end::Login Header-->
                <!--begin::Login Sign in form-->
                <div class="login-signin">
                    <div class="mb-5">
                        <h3>HRMS</h3>
                        <p class="opacity-60 sub_head">Login to your account</p>
                    </div>

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        <div class="form-group">
                       
                            @Html.TextBoxFor(m => m.CompanyCode, new { @class = "form-control h-auto  placeholder-white rounded-pill border-0 py-4 px-8 mb-5", @maxlength = 120, @placeholder = "Company Code" ,@required="true"})
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(m => m.UserCode, new { @class = "form-control h-auto placeholder-white rounded-pill border-0 py-4 px-8 mb-5", @maxlength = 120, @placeholder = "User Code / Username", @required = "true" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control h-auto placeholder-white rounded-pill border-0 py-4 px-8 mb-5", @maxlength = 120, @placeholder = "Password", type = "password" , @required = "true" })
                        </div>
                        <div class="form-group d-flex flex-wrap justify-content-between align-items-center px-8">
                            <div class="checkbox-inline">
                                <label class="checkbox checkbox-outline  m-0">
                                    <input type="checkbox" name="remember" />
                                    <span></span>Remember me
                                </label>
                            </div>
                            <a href="javascript:;" id="kt_login_forgot" class=" font-weight-bold">
                                Forget
                                Password ?
                            </a>
                        </div>
                        <div class="form-group text-center mt-10">
                            <button type="submit"
                                    class="btn btn-default btn-pill font-weight-bold px-15 py-3">
                                Sign In
                            </button>
                        </div>
                        <div class="form-group text-center mt-10">
                            <span style="color:red;">@TempData["Message"]</span>
                            </div>
                            }
                            <div class="mt-10">
                                <span class="opacity-70 mr-4">Don't have an account yet?</span>
                                <a href="javascript:;" id="kt_login_signup" class=" font-weight-bold">Sign Up</a>
                            </div>
                        </div>
                        <!--end::Login Sign in form-->
                        <!--begin::Login Sign up form-->
                        <div class="login-signup">
                            <div class="mb-5">
                                <h3>Sign Up</h3>
                                <p class="opacity-60 ">Enter your details to create your account</p>
                            </div>
                            <form class="form text-center" id="kt_login_signup_form">
                                <div class="form-group">
                                    <input class="form-control h-auto  placeholder-white rounded-pill border-0 py-4 px-8"
                                           type="text" placeholder="Company Code" name="fullname" />
                                </div>
                                <div class="form-group">
                                    <input class="form-control h-auto  placeholder-white rounded-pill border-0 py-4 px-8"
                                           type="text" placeholder="Username" name="email" autocomplete="off" />
                                </div>
                                <div class="form-group">
                                    <input class="form-control h-auto placeholder-white  rounded-pill border-0 py-4 px-8"
                                           type="password" placeholder="Password" name="password" />
                                </div>
                                <div class="form-group">
                                    <input class="form-control h-auto placeholder-white rounded-pill border-0 py-4 px-8"
                                           type="password" placeholder="Confirm Password" name="cpassword" />
                                </div>
                                <div class="form-group text-left px-8">
                                    <div class="checkbox-inline">
                                        <label class="checkbox checkbox-outline  m-0">
                                            <input type="checkbox" name="agree" />
                                            <span></span>I Agree the
                                            <a href="#" class=" font-weight-bold ml-1">
                                                terms and
                                                conditions
                                            </a>.
                                        </label>
                                    </div>
                                    <div class="form-text text-muted text-center"></div>
                                </div>
                                <div class="form-group">
                                    <button id="kt_login_signup_submit"
                                            class="btn btn-pill btn-default font-weight-bold opacity-90 px-15 py-3 m-2">
                                        Sign
                                        Up
                                    </button>
                                    <button id="kt_login_signup_cancel"
                                            class="btn btn-pill font-weight-bold opacity-70 px-15 py-3 m-2">
                                        Cancel
                                    </button>
                                </div>
                            </form>
                        </div>
                        <!--end::Login Sign up form-->
                        <!--begin::Login forgot password form-->
                        <div class="login-forgot">
                            <div class="mb-5">
                                <h3>Forgotten Password ?</h3>
                                <p class="opacity-60">Enter your email to reset your password</p>
                            </div>
                            <form class="form" id="kt_login_forgot_form">
                                <div class="form-group mb-10">
                                    <input class="form-control h-auto  placeholder-white rounded-pill border-0 py-4 px-8"
                                           type="text" placeholder="Email" name="email" autocomplete="off" />
                                </div>
                                <div class="form-group">
                                    <button id="kt_login_forgot_submit"
                                            class="btn btn-pill btn-default font-weight-bold opacity-90 px-15 py-3 m-2">
                                        Request
                                    </button>
                                    <button id="kt_login_forgot_cancel"
                                            class="btn btn-pill  font-weight-bold opacity-70 px-15 py-3 m-2">
                                        Cancel
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!--end::Login forgot password form-->
                    </div>
            <p class="copy-right">
                Copyright@2021 HRMS. All right reserved.
            </p>
        </div>

        <div class="login-overflow"></div>


    </div>


    <!--end::Main-->
    <!--begin::Global Theme Bundle(used by all pages)-->
    <script src="~/js/plugins.bundle.js"></script>
    <script src="~/js/prismjs.bundle.js"></script>
    <script src="~/js/scripts.bundle.js"></script>
    <!--end::Global Theme Bundle-->
    <!--begin::Page Vendors(used by this page)-->
    <script src="~/js/fullcalendar.bundle.js"></script>
